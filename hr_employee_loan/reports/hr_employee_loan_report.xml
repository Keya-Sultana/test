        <record id="action_report_hr_employee_loan" model="ir.actions.report">
			<field name="name">Print Loan</field>
			<field name="model">hr.employee.loan</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">hr_employee_loan.report_hr_employee_loan</field>
			<field name="report_file">hr_employee_loan.report_hr_employee_loan</field>
			<field name="binding_model_id" ref="hr_employee_loan.model_hr_employee_loan"/>
            <field name="paperformat_id" ref="paperformat_backend_portrait"/>
			<field name="binding_type">report</field>
		</record>
        <template id="report_hr_employee_loan">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="page-break-inside:auto">
                        <div style="padding-top:5px;">
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h3 class="report-title">Loan Summary</h3>
                                <h4 class="report-title">LOAN <span t-esc="data['loan_name']"/></h4>

                                <div class="row">
                                    <div class="col-7 text-left">
                                        <h6><b>Name: </b><span t-esc="data['employee_name']"/></h6>
                                        <h6><b>Department: </b><span t-esc="data['department_name']"/></h6>
                                        <h6><b>Loan Type: </b><span t-esc="data['loan_type']"/></h6>
                                        <h6><b>Principle Amount: </b><span t-esc="data['principal_amount']"/></h6>
                                        <t t-if="data['interst_mode']">
                                            <h6><b>Interest Mode: </b><span t-esc="data['interst_mode']"/></h6>
                                        </t>
                                        <t t-if="data['rate']">
                                            <h6><b>Rate: </b><span t-esc="'%.2f'% data['rate']"/></h6>
                                        </t>
                                    </div>
                                    <div class="col-5 text-left">
                                        <h6><b>Applied Date : </b><span t-esc="data['applied_date']" t-options='{"widget": "date"}'/></h6>
                                        <h6><b>Approved Date : </b><span t-esc="data['approved_date']" t-options='{"widget": "date"}'/></h6>
                                        <h6><b>Disbursement Date : </b><span t-esc="data['disbursement_date']" t-options='{"widget": "date"}'/></h6>
                                        <h6><b>Repayment Date : </b><span t-esc="data['repayment_date']" t-options='{"widget": "date"}'/></h6>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Loan Adjustment</th>
                                        <th>Amount Due</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="page-break-inside: avoid">
                                        <td><span t-esc="data['amount_receive']"/></td>
                                        <td><span t-esc="data['amount_due']"/></td>
                                    </tr>
                                </tbody>

                            </table>
                            <h3><strong>Installments</strong></h3>
                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>Installment Number</th>
                                        <th>Schedule Date</th>
                                        <th>Installment Amount</th>
                                        <th>state</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l['num_installment']"/></td>
                                            <td><span t-esc="l['schedule_date']" t-options='{"widget": "date"}'/></td>
                                            <td><span t-esc="l['installment']"/></td>
                                            <td><span t-esc="l['state']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <t t-if="policys">
                                <h3><strong>Policies</strong></h3>
                                <table class="table table-report-xs table-bordered table-striped">
                                    <thead>
                                        <tr class="odo-bg-gray">
                                            <th>Name</th>
                                            <th>Code</th>
                                            <th>Type</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="policies_list" t-as="p">
                                            <tr style="page-break-inside: avoid">
                                                <td><span t-esc="p['name']"/></td>
                                                <td><span t-esc="p['code']"/></td>
                                                <td><span t-esc="p['type']"/></td>
                                                <td><span t-esc="'%.2f'% p['value']"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
