<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="add_production_request_view" model="ir.ui.view">
        <field name="name">Add Production Request</field>
        <field name="model">add.production.request</field>
        <field name="arch" type="xml">
            <form string="Add Production">
                <group>
                    <field name="production_line_ids" nolabel="1" colspan="4">
                        <tree>
                            <field name="product_id" />
                            <field name="lot_id" context="{'default_product_id': product_id}" domain="[('product_id','=',product_id)]"/>
                            <field name="product_uom_id" />
                            <field name="product_qty" />
                            <button name="action_show_package_details" title="Display production content" type="object" icon="fa-list" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="add_production_request_view_action" model="ir.actions.act_window">
        <field name="name">Add Production</field>
        <field name="res_model">add.production.request</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
