<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Rule for General Employee-->
    <record id="rule_hr_employment_history" model="ir.rule">
        <field name="name">General Employee</field>
        <field name="model_id" ref="model_hr_employment_history"/>
        <field name="domain_force">['|',('employee_id.user_id','=',user.id),('employee_id','child_of',[e.id for e in user.employee_ids])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

<!--    Rule for Employee/Officer-->
    <record id="rule_hr_employment_office_history" model="ir.rule">
        <field name="name">Employee Office</field>
        <field name="model_id" ref="model_hr_employment_history"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
        <field name="groups" eval="[(4,ref('hr.group_hr_user'))]"/>
    </record>
</odoo>