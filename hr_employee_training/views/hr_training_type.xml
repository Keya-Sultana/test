<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="training_type_tree" model="ir.ui.view">
        <field name="name">hr.training.type.tree</field>
        <field name="model">hr.training.type</field>
        <field name="arch" type="xml">
            <tree string="Training Type">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="training_type_view_form" model="ir.ui.view">
        <field name="name">hr.training.type.form</field>
        <field name="model">hr.training.type</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                    <group>
                        <field name="name"/>
                    </group>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="training_type_action" model="ir.actions.act_window">
        <field name="name">Training Types</field>
        <field name="res_model">hr.training.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_view_training_type"
            action="training_type_action"
            parent="hr.menu_human_resources_configuration_employee"
            sequence="6"/>

</odoo>
