<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_training_form" model="ir.ui.view">
        <field name="name">hr.training.form view</field>
        <field name="model">hr.training</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Training Form">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="skill_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--    Tree View-->
    <record id="hr_training_tree_view" model="ir.ui.view">
        <field name="name">hr.training.tree</field>
        <field name="model">hr.training</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Training">
                <field name="code"/>
                <field name="type_id"/>
                <field name="skill_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_training_view">
        <field name="name">Training</field>
        <field name="res_model">hr.training</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_view_training_master_form"
            name="Training Master"
            action="action_training_view"
            parent="hr.menu_human_resources_configuration_employee"
            groups="base.group_no_one"
            sequence="7"/>
</odoo>