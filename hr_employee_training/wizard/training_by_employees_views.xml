<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_training_by_employees" model="ir.ui.view">
            <field name="name">hr.training.by.employee</field>
            <field name="model">hr.training.by.employee</field>
            <field name="arch" type="xml">
                <form string="Training by Employees">
                    <group>
                        <span colspan="4" nolabel="1">This wizard will generate training for all selected employee(s) based.</span>
                    </group>

                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1"/>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="Generate" name="generate_record" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_training_by_employees" model="ir.actions.act_window">
            <field name="name">Assign Employees</field>
            <field name="res_model">hr.training.by.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_training_by_employees"/>
            <field name="target">new</field>
        </record>

</odoo>
