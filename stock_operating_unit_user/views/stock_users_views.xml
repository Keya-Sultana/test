<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="location_view_users_form" model="ir.ui.view">
        <field name="name">res.users.location</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group[1]" position="after">
                <group string="Allowed Locations">
                    <field name="default_location_id"/>
                    <field name="location_ids" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>