<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Sequence Records -->
    <record id="seq_asset_replacement_request" model="ir.sequence">
        <field name="name">Asset Replacement Request Sequence</field>
        <field name="code">employee.asset.replacement.request</field>
        <field name="active">TRUE</field>
        <field name="prefix">AR/</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
    </record>

    <record id="asset_replacement_request_form" model="ir.ui.view">
        <field name="name">employee.asset.replacement.request.form view</field>
        <field name="model">employee.asset.replacement.request</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Asset Replacement Requests" delete="false" copy='0' create="false">
                <header>
                    <button name="action_confirm" type="object" string="Submit To Manager" states="draft"
                            class="oe_highlight"/>
                    <button name="action_allocate" type="object" string="Allocate" states="applied"
                            class="oe_highlight"/>
                    <button name="action_reject" type="object" string="Reject" states="applied" class="oe_highlight"/>
                    <button name="action_return" type="object" string="Return" states="allocated" class="oe_highlight"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_request_form" type="object" class="oe_stat_button"
                                icon="fa-external-link" string="Requested From">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h5>
                            <field name="name"/>
                        </h5>
<!--                        <label for="name" class="oe_edit_only"/>-->
<!--                        <h2>-->
<!--                            <field name="name" string="Name" placeholder="Asset Replacement Name"/>-->
<!--                        </h2>-->
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="operating_unit_id"/>
                            <field name="equipment_id"
                                   domain="[('state','=','available'),'|', ('operating_unit_id', '=', False), ('operating_unit_id', '=', operating_unit_id)]"
                                   attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="allocation_type" widget="radio" options="{'horizontal': true}"/>

                        </group>
                        <group>
                            <field name="replace_request_date"/>
                            <field name="replace_allocation_date"
                                   attrs="{'invisible': [('state', 'not in', ['allocated','returned'])]}"/>
                            <field name="replace_expected_return_date"
                                   attrs="{'invisible': [('state', 'not in', ['allocated','returned'])]}"/>
                            <field name="replace_return_date"
                                   attrs="{'invisible': [('state', 'not in', ['returned'])]}"/>
                        </group>
                    </group>
                    <notebook position="inside">
                        <page string="Description">
                            <field name="replace_note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--    Tree View-->
    <record id="asset_replacement_request_tree_view" model="ir.ui.view">
        <field name="name">employee.asset.replacement.request.tree</field>
        <field name="model">employee.asset.replacement.request</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Asset Replacement Requests" delete="false" create="false" edit ="false">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="equipment_id"/>
                <field name="replace_request_date"/>
                <field name="replace_expected_return_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--    Search view-->
    <record id="asset_replacement_request_search" model="ir.ui.view">
        <field name="name">asset.replacement.request.search.view</field>
        <field name="model">employee.asset.replacement.request</field>
        <field name="arch" type="xml">
            <search string="Asset Replacement Search">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="allocation_type"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asset_replacement_request_action">
        <field name="name">Asset Replacement Requests</field>
        <field name="res_model">employee.asset.replacement.request</field>
        <field name="domain">[]</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="asset_replacement_request_search"/>
    </record>

    <menuitem
            id="menu_asset_replacement_request"
            name="Asset Replacement Request"
            parent="main_employee_asset_menu"
            action="asset_replacement_request_action"
            sequence="6"/>
</odoo>