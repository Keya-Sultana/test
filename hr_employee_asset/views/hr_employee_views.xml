<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_asset_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.asset</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_maintenance.hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div/button[@name='%(maintenance.hr_equipment_action)d']" position="replace">
                <button name="%(hr_employee_asset.employee_asset_action)d"
                    context="{'search_default_employee_id': id}"
                    groups="maintenance.group_equipment_manager"
                    class="o_stat_button"
                    icon="fa-cubes"
                    type="action">
                    <field name="equipment_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
