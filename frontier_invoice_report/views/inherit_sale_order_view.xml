<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_sale_frontier" model="ir.ui.view">
            <field name="name">sale.order.form.sale.frontier</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="port_of_loading"/>
                    <field name="port_of_discharge"/>
                    <field name="final_destination"/>
<!--                    <field name="product_hs_code"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>