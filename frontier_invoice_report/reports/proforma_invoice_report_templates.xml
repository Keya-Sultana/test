        <t t-call="web.html_container">
            <t t-call="frontier_invoice_report.custom_external_layout">
<!--        <t t-call="web.external_layout">-->
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="row mt-0" style="border: 1px solid black;">
                <div class="col-12 text-center">
                    <strong>PROFORMA INVOICE</strong>
                </div>
            </div>
            <div class="row" style="border: 1px solid black;">
                <div class="col-6 text-left" style="font-size:15px">
                    <strong>Consignor</strong>
                    <div t-field="doc.company_id.partner_id" style="font-size:15px"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
                <div class="col-6 text-left">
                    <b style="font-size:15px">Invoice no. &amp; Date: </b><span  style="font-size:15px" t-field="doc.date_order"/><br/>
                    <b style="font-size:15px">Buyer's Order No. &amp; Date: </b><span  style="font-size:15px" t-field="doc.client_order_ref"/>
                </div>
            </div>

            <div class="row" style="border: 1px solid black;">
                <div class="col-4 text-left" style="font-size:15px">
                    <strong>Bill To:</strong>
                    <div t-field="doc.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
                </div>
                <div class="col-4 text-left" style="font-size:15px">
                    <strong>Ship To:</strong>
                    <div t-field="doc.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>

                </div>
                <div class="col-4 text-left" style="font-size:15px">
                    <strong>Notify Party:</strong>
                    <div t-field="doc.partner_invoice_id"
                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
            </div>

            <div class="row" style="border: 1px solid black;">
                <div class="col-4" style="font-size:15px">
                    Country of origin of Goods <span t-field="doc.company_id.partner_id.country_id"/><br/>
                    Country of Final Destination <span t-field="doc.partner_invoice_id.country_id"/>
