<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="proforma_invoice_format" model="report.paperformat">
            <field name="name">Proforma Invoice Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <record id="sale.action_report_pro_forma_invoice" model="ir.actions.report">
            <field name="name">PRO-FORMA</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">frontier_invoice_report.report_frontier_pro_forma</field>
            <field name="report_file">frontier_invoice_report.report_frontier_pro_forma</field>
            <field name="paperformat_id" ref="proforma_invoice_format"/>
            <field name="print_report_name">'PRO-FORMA - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
