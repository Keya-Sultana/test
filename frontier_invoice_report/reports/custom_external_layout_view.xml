<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_external_layout">
       <t t-if="not o" t-set="o" t-value="doc"/>
       <t t-set="company" t-value="company_id"/>
       <div class="header mb-10">
           <div class="row">
            <div class="col-4">
                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-height: 70px;"/>
            </div>
            <div style="font-size:10px;text-align:right;" class="col-8"><br/>
               Registered Address: <span t-field="o.company_id.partner_id.street"/><br/><span t-field="o.company_id.partner_id.street2"/>
                <span t-field="o.company_id.partner_id.city"/>-<span t-field="o.company_id.partner_id.zip"/>,<span t-field="o.company_id.partner_id.country_id"/><br/>

<!--                partner_id.child_ids value-->
                <t t-if="o.company_id.partner_id.child_ids">
                    <t t-foreach="o.company_id.partner_id.child_ids" t-as="child">
                      <t t-if="child.type == 'other'">
                        <!-- Access child field values here -->
                        Office Address:  <span t-esc="child.street"/><span t-esc="child.street2"/><br/>
                        <span t-esc="child.city"/>-<span t-esc="child.zip"/>,<span t-esc="child.country_id.name"/>
                      </t>
                    </t>
                  </t>

                <br/> <span t-field="o.company_id.partner_id.email"/>

            </div>
        </div>
<!--           <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-height: 60px;"-->
<!--                class="float-left"/>-->
<!--           <div style="font-size:12px;text-align:right;" class="col-6 float-right">-->
<!--               <div>-->
<!--&lt;!&ndash;                   <strong t-field="o.company_id.partner_id.name"/><br/>&ndash;&gt;-->
<!--                   Registered Address: <span t-field="o.company_id.partner_id"-->
<!--                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>-->
<!--                   <span t-field="o.company_id.partner_id.email"/><br/>-->
<!--&lt;!&ndash;                   <span t-field="o.company_id.partner_id.website"/>&ndash;&gt;-->
<!--               </div>-->
<!--           </div>-->
       </div>

       <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
           <t t-call="web.address_layout"/>
           <t t-raw="0"/>
       </div>

        <div  class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
<!--                <ul class="list-inline">-->
<!--                    <li t-if="o.company_id.email" class="list-inline-item d-inline"><span t-field="o.company_id.email"/></li>-->
