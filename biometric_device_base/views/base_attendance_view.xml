<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="biometric_device_attendance_tree" model="ir.ui.view">
        <field name="name">biometric.device.attendance.tree</field>
        <field name="model">biometric.device.attendance</field>
        <field name="arch" type="xml">
            <tree string="Companies">
                <field name="unit_id"/>
                <field name="unit_name"/>
                <field name="user_name"/>
                <field name="access_id"/>
                <field name="employee_device_id"/>
                <field name="device_id"/>
                <!--                <field name="display_name"/>-->
                <field name="access_date"/>
                <field name="access_time"/>
                <field name="punching_time"/>
                <field name="process_status"/>
            </tree>
        </field>
    </record>

    <record id="base_attendance_action" model="ir.actions.act_window">
        <field name="name">Base Attendance</field>
        <field name="res_model">biometric.device.attendance</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_process_attendance_log_manually" model="ir.actions.server">
        <field name="name">Process Attendance Logs</field>
        <field name="model_id" ref="biometric_device_base.model_biometric_device_attendance"/>
        <field name="binding_model_id" ref="biometric_device_base.model_biometric_device_attendance"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.process_attendance_logs_manually()
        </field>
    </record>

    <menuitem id="base_attendance_view" name="Attendance log" action="base_attendance_action" parent="base_device_menu"
              sequence="2" groups="hr_attendance.group_hr_attendance_user"/>
</odoo>
