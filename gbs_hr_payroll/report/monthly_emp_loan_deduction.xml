<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_monthly_loan_deduction">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="page-break-inside:auto">
                        <div>
                            <div class="clearfix">
                                <h3 class="text-center">Monthly Employee Loan Deduction Report</h3>
                                <br/>
                                <h4>
                                    <label>Description</label>
                                    :
                                    <span t-esc="data['name']"/>
                                </h4>
                            </div>
                            <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SN</th>
                                        <th>Employee</th>
                                        <th>Designation</th>
                                        <th>Department</th>
                                        <th style="min-width:60px">D.O.J</th>
                                        <th style="min-width:60px">Employee ID</th>
                                        <th style="min-width:60px">Loan Amount</th>
                                        <t t-foreach="rules" t-as="r">
                                            <t t-if="r['code']== 'LOAN'">
                                                <th>
                                                    <span t-esc="r['name']"></span>
                                                </th>
                                            </t>
                                        </t>
                                        <th style="min-width:60px">Remaining Loan</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="loan_list" t-as="p">
                                        <tr>
                                            <td>
                                                <span t-esc="p_index+1"></span>
                                            </td>
                                            <td>
                                                <span class="text-nowrap" t-esc="p['emp_name']"></span>
                                            </td>
                                            <td>
                                                <span class="text-nowrap" t-esc="p['designation']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['department']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['doj']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['employee_device_id']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['initial_loan']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['LOAN']"></span>
                                            </td>
                                            <td>
                                                <span t-esc="p['remain_loan']"></span>
                                            </td>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
        <record id="action_monthly_loan_deduction" model="ir.actions.report">
			<field name="name">Monthly Loan Deduction</field>
			<field name="model">hr.payslip.run</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">gbs_hr_payroll.report_monthly_loan_deduction</field>
			<field name="report_file">gbs_hr_payroll.report_monthly_loan_deduction</field>
			<field name="paperformat_id" ref="paperformat_backend_landscape"/>
			<field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
			<field name="binding_type">report</field>
		</record>
