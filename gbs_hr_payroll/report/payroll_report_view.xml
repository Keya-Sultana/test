<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_backend_portrait" model="report.paperformat">
            <field name="name">Custom Potrait Reports</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">15</field>
            <field name="margin_right">15</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <record id="paperformat_backend_landscape" model="report.paperformat">
            <field name="name">Custom Landscape Report</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">17</field>
            <field name="dpi">90</field>
        </record>

        <template id="report_individual_payslip">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="page-break-inside:auto">
<!--                        <div>-->
                            <div>
                                <t t-if="report_type == 'cash'">
                                    <h3 class="text-center">Monthly Cash Salary Sheet</h3>
                                </t>
                                <t t-if="report_type != 'cash'">
                                    <h3 class="text-center">Monthly Salary Sheet</h3>
                                </t>
                                <br/>
                                <h4>
                                    <label>Description</label>
                                    :
                                    <span t-esc="data['name']"/>
                                </h4>
                            </div>


                            <table class="table table-bordered table-report-xs table-striped"
                                   style="margin-bottom: 10px;">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SN</th>
                                        <th>Employee</th>
                                        <th>Designation</th>
                                        <th style="min-width:90px">D.O.J</th>
<!--                                        <t t-if="data['type'] != '1'">-->
<!--                                            <th style="min-width:90px">2Loan Balance</th>-->
<!--                                        </t>-->
                                        <t t-if="data['type'] == '1'">
                                            <th>Gross</th>
                                        </t>
                                        <t t-if="data['type'] == '1'">
                                            <th>Special Allowance</th>
                                        </t>
                                        <t t-foreach="rules" t-as="r">
                                            <th>
                                                <span t-esc="r['name']"></span>
                                            </th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-foreach="docs" t-as="k">
                                        <t t-if="k['val']">
                                            <td class="odo-bg-info" t-att-colspan="docs_len" style="padding-left:15px">
                                                <strong t-esc="k['name']"></strong>
                                            </td>

                                            <t t-foreach="k['val']" t-as="p">
                                                <tr>
                                                    <td>
                                                        <span t-esc="p['sn']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="p['emp_name']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="p['designation']"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="p['doj']"></span>
                                                    </td>
<!--                                                    <t t-if="data['type'] != '1'">-->
<!--                                                        <td>-->
<!--                                                            <span t-esc="p['loan_balance']"></span>-->
<!--                                                        </td>-->
<!--                                                    </t>-->
                                                    <t t-if="data['type'] == '1'">
                                                        <td>
                                                            <span t-esc="p['gross']"></span>
                                                        </td>
                                                    </t>
                                                    <t t-if="data['type'] == '1'">
                                                        <td>
                                                            <span t-esc="p['sa']"></span>
                                                        </td>
                                                    </t>
                                                    <t t-foreach="rules" t-as="r">

                                                        <td class="text-right">
                                                            <span t-esc="p[r['code']]"></span>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>

                                    <tr style="page-break-inside: avoid">
                                        <t t-if="data['type'] != '1'">
                                            <td></td>
                                            <td>Total</td>
                                            <td></td>
<!--                                            <td></td>-->
                                            <td></td>
                                            <t t-foreach="rules" t-as="r">
                                                <td class="text-right">
                                                    <strong class="text-nowrap" t-esc="row_total[r['code']]"></strong>
                                                </td>
                                            </t>
                                        </t>
                                    </tr>

                                    <tr>
                                        <td t-att-colspan="docs_len">
                                            <h4 class="text-right pr-5">
                                                <strong>Total:
                                                    <span t-esc="total_sum"></span>
                                                </strong>
                                            </h4>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p class="text-right">In Words:
                                <strong t-esc="amt_to_word"></strong>
                            </p>
<!--                        </div>-->
<!--                        <t t-call="web.report_layout.report_signing"></t>-->
                    </div>
                </t>
            </t>
        </template>
        <record id="action_report_individual_paslips" model="ir.actions.report">
			<field name="name">Payslip Summary</field>
			<field name="model">hr.payslip.run</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">gbs_hr_payroll.report_individual_payslip</field>
			<field name="report_file">gbs_hr_payroll.report_individual_payslip</field>
			<field name="paperformat_id" ref="paperformat_backend_landscape"/>
			<field name="binding_model_id" ref="hr_payroll.model_hr_payslip_run"/>
			<field name="binding_type">report</field>
		</record>
