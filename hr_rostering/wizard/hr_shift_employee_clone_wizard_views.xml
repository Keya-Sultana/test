<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_shift_employees_clone" model="ir.ui.view">
            <field name="name">hr.batch.employee.clone</field>
            <field name="model">hr.batch.employee.clone</field>
            <field name="arch" type="xml">
                <form string="Employees">
                    <group col="3">
                        <group><field name="shift_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/></group>
                        <group><field name="effective_from"/></group>
                        <group><field name="effective_end"/></group>
                    </group>
                    <group colspan="4" >
                        <separator string="Employees" colspan="4"/>
                        <newline/>
                        <field name="employee_ids" nolabel="1">
                        	<tree string="List" editable="bottom">
                        		<field name="name"/>
                        		<field name="default_operating_unit_id"/>
                                <field name="company_id"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                        	</tree>
                        </field>
                    </group>
                    <footer>
                        <button icon="fa-cogs" string="New Shift Assign for Employee" name="create_employee_shift_batch" type="object" class="oe_highlight"  />
                    </footer>
               </form>
            </field>
        </record>

        <record id="action_hr_batch_employees_clone" model="ir.actions.act_window">
            <field name="name">New Shift Assign for Employee</field>
            <field name="res_model">hr.batch.employee.clone</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_shift_employees_clone"/>
<!--            <field name="context">{'default_effective_end': context.get('effective_end', False),'default_shift_id': context.get('shift_id', False),'default_effective_from': context.get('effective_from', False)}</field>-->
            <field name="target">new</field>
        </record>

    </data>

</odoo>
