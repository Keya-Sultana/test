<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_shift_employee_batch_form" model="ir.ui.view">
            <field name="name">hr.shift.employee.batch.form</field>
            <field name="model">hr.shift.employee.batch</field>
            <field name="arch" type="xml">
                <form string="Shifting Batch">
                    <header>
                        <button name="%(action_hr_batch_employees)d" type="action" string="Assign Employee"
                                states="draft" class="oe_highlight"/>
                        <button name="%(action_hr_batch_employees)d" type="action" string="Assign Employee"
                                states="in_progress"/>
                        <button name="regenerate_employee_attendance_slot" string="Publish" states="in_progress"
                                type="object" class="oe_highlight"/>
                        <button name="%(action_hr_batch_employees_clone)d" string="Clone" states="publish"
                                type="action" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,publish"/>
                    </header>
                    <sheet>
                        <label for="name"/>
                        <h1>
                            <field name="name" attrs="{ 'readonly':[('state','=','publish')]}"/>
                        </h1>
                        <group col="2">
                            <group>
                                <field name="company_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
                                       attrs="{ 'readonly':[('state','=','publish')]}"/>
                            </group>
                            <group>
                                <field name="operating_unit_id"
                                       options='{"no_open": True,"no_create": 1, "no_create_edit":1}'
                                       attrs="{ 'readonly':[('state','=','publish')]}"/>
                            </group>
                        </group>
                        <separator string="Employees"/>
                        <field name="shift_emp_ids" attrs="{ 'readonly':[('state','=','publish')]}">
                            <tree create='false' editable='bottom'>
                                <field name='employee_id' readonly='1'/>
                                <field name='shift_id' readonly='1'/>
                                <field name='effective_from'/>
                                <field name='effective_end'/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_shift_employee_batch_filter" model="ir.ui.view">
            <field name="name">hr.shift.employee.batch</field>
            <field name="model">hr.shift.employee.batch</field>
            <field name="arch" type="xml">
                <search string="Search assign employee shift">
					<field name="name"/>
                    <field name="operating_unit_id"/>
					<filter name="is_draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="is_assign" string="Assign Employee" domain="[('state','=','in_progress')]"/>
                    <filter name="is_publish" string="Published" domain="[('state','=','publish')]"/>
				</search>
            </field>
        </record>

        <record id="hr_shift_employee_batch_tree" model="ir.ui.view">
            <field name="name">hr.shift.employee.batch.tree</field>
            <field name="model">hr.shift.employee.batch</field>
            <field name="arch" type="xml">
                <tree string="Shifting History">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_shift_batch" model="ir.actions.act_window">
            <field name="name">Assign Employee Shift</field>
            <field name="res_model">hr.shift.employee.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_shift_employee_batch_filter"/>
            <field name="context">{'search_default_is_draft': True, 'search_default_is_assign': True}</field>
        </record>


        <menuitem id="menu_hr_shift_employee_batch"
                  name="Assign Employee Shift"
                  parent="main_menu_hr_shifting"
                  sequence="2" action="action_hr_shift_batch"
                  groups="hr.group_hr_user"/>
    </data>
</odoo>