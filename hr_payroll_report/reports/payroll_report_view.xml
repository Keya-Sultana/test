<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_individual_payslip">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row" style="padding-top:20px;">

                            <div class="col-12" style="font:15px lucida-console,sans-serif !important;" >

                                <div t-if="report_type == 'cash'">
                                    <h3 class="text-center">Cash Salary Sheet</h3>
                                </div>
                                <div t-if="report_type != 'cash'">
                                    <h3 class="text-center">Salary Sheet</h3>
                                </div>
                                <br/>
                                <h4>
                                    <label>Description</label>:
                                    <span t-esc="data['name']"/>
                                </h4>
                            </div>
                        </div>

                            <div style="padding-top:20px;"></div>

                            <table class="table table-bordered table-report-xs table-striped" style="margin-bottom: 10px;">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>SN</th>
                                        <th>Employee</th>
                                        <th>Designation</th>
                                        <th>Gross</th>
<!--                                        <th style="min-width:90px">D.O.J</th>-->
<!--                                        <t t-if="data['type'] != '1'">-->
<!--                                            <th style="min-width:90px">Loan Balance</th>-->
<!--                                        </t>-->
<!--                                        <t t-if="data['type'] == '1'">-->
<!--                                            <th>Gross</th>-->
<!--                                        </t>-->
<!--                                        <t t-if="data['type'] == '1'">-->
<!--                                            <th>Special Allowance</th>-->
<!--                                        </t>-->
                                        <t t-foreach="rules" t-as="r">
                                            <th>
                                                <span t-esc="r['name']"></span>
                                            </th>
                                        </t>
                                        <th style="min-width:130px">Signature</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <t t-foreach="docs_list" t-as="k">
                                        <t t-if="k['val']">
                                            <td class="odo-bg-info" t-att-colspan="docs_len" style="padding-left:15px">
                                                <strong t-esc="k['name']"></strong>
                                            </td>

                                            <t t-foreach="k['val']" t-as="o">
                                                <tr>
                                                    <td>
                                                        <span t-esc="o['sn']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="o['emp_name']"></span>
                                                    </td>
                                                    <td>
                                                        <span class="text-nowrap" t-esc="o['designation']"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="o['gross']"></span>
                                                    </td>
<!--                                                    <td>-->
<!--                                                        <span t-esc="o['doj']"></span>-->
<!--                                                    </td>-->
<!--                                                    <t t-if="data['type'] != '1'">-->
<!--                                                        <td>-->
<!--                                                            <span t-esc="o['loan_balance']"></span>-->
<!--                                                        </td>-->
<!--                                                    </t>-->
<!--                                                    <t t-if="data['type'] == '1'">-->
<!--                                                        <td>-->
<!--                                                            <span t-esc="o['gross']"></span>-->
<!--                                                        </td>-->
<!--                                                    </t>-->
<!--                                                    <t t-if="data['type'] == '1'">-->
<!--                                                        <td>-->
<!--                                                            <span t-esc="o['sa']"></span>-->
<!--                                                        </td>-->
<!--                                                    </t>-->
                                                    <t t-foreach="rules" t-as="r">

                                                        <td class="text-right">
                                                            <span t-esc="o[r['code']]"></span>
                                                        </td>
                                                    </t>
                                                    <td>

                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>

                                    <tr style="page-break-inside: avoid">
                                        <td></td>
                                        <td></td>
                                        <td>Total</td>
                                        <td></td>
                                        <t t-foreach="rules" t-as="r">
                                                <td class="text-right">
                                                    <strong class="text-nowrap" t-esc="row_total[r['code']]"></strong>
                                                </td>
                                            </t>
                                    </tr>

                                    <tr>
                                        <td t-att-colspan="docs_len">
                                            <h4 class="text-right pr-5">
                                                <strong>Total:
                                                    <span t-esc="total_sum"></span>
                                                </strong>
                                            </h4>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
<!--                            <p class="text-right">In Words:-->
<!--                                <strong t-esc="amt_to_word"></strong>-->
<!--                            </p>-->
                        </div>


                </t>
            </t>
        </template>
        <report
                id="report_individual_paslips"
                string="Payslip Summary"
                model="hr.payslip.run"
                report_type="qweb-pdf"
                file="hr_payroll_report.report_individual_payslip"
                name="hr_payroll_report.report_individual_payslip"
                menu = "True"
                paperformat="hr_payroll_report.paperformat_backend_landscape"
        />
    </data>
</odoo>