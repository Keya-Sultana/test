<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- HR Employee Form View -->
		<record id="inherit_employee_form_view_yuko" model="ir.ui.view">
            <field name="name">inherit.hr.employee.familyinfo</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_family.hr_employee_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_spouse_tel']" position="after">
                        <field name="spouse_mobile"/>
                    </xpath>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_spouse_employer']" position="before">
                        <field name="spouse_nid"/>
                        <field name="spouse_occupation"/>
                    </xpath>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_father']" position="after">
                        <field name="father_nid"/>
                        <field name="father_occupation"/>
                        <field name="father_mobile"/>
                    </xpath>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_mother']" position="after">
                        <field name="mother_nid"/>
                        <field name="mother_occupation"/>
                        <field name="mother_mobile"/>
                    </xpath>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_father_date_of_birth']" position="replace"/>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_mother_date_of_birth']" position="replace"/>
                    <xpath expr="//notebook/page/group/group/field[@name='fam_spouse_tel']" position="replace"/>
                </data>
            </field>
        </record>
		
	</data>
</odoo>