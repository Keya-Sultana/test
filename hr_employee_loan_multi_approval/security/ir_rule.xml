<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_for_multi_level_chain" model="ir.rule">
        <field name="name">Loan Approver Rule</field>
        <field name="model_id" ref="hr_employee_loan.model_hr_employee_loan"/>
        <field name="domain_force">['|',('pending_approver.id','in',[e.id for e in user.employee_ids]),('employee_id','child_of',[e.id for e in user.employee_ids])]</field>
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
</odoo>