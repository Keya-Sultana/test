        <record id="action_rfq_report" model="ir.actions.report">
			<field name="name">RFQ</field>
			<field name="model">purchase.rfq</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">purchase_rfq_comparison.rfq_report</field>
			<field name="report_file">purchase_rfq_comparison.rfq_report</field>
			<field name="binding_model_id" ref="purchase_rfq_comparison.model_purchase_rfq"/>
			<field name="binding_type">report</field>
		</record>

        <template id="rfq_report">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="page-break-inside: auto">
                        <style>
                            .signed-by { display: inline-block; border-top: 1px solid #333; padding: 5px; margin-top: 60px; }
                        </style>
                        <div class="clearfix">
                            <h4 class="text-center mt-0">Request For Quotation(RFQ)</h4>
                        </div>
                        <div class="clearfix">
                            <table class="table table-report table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th>Sl#</th>
                                        <th>Items/Description</th>
                                        <th>Req. Quantity</th>
                                        <th>Unit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="lists" t-as="l">
                                        <tr style="page-break-inside: avoid">
                                            <td><span t-esc="l_index+1"/></td>
                                            <td><span t-esc="l['product_id']"/></td>
                                            <td><span t-esc="l['product_qty']"/></td>
                                            <td><span t-esc="l['product_uom_id']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>