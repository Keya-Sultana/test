                    <group>
                        <h1><field name="sequence_name" nolabel="1" invisible="not context.get('default_is_issue', False)"/></h1>
                        <field name="is_issue" widget="boolean_toggle" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>

