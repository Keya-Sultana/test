<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>

            <!-- Employee Requisition Tree View  -->

        <record model="ir.ui.view" id="employee_requisition_view">
            <field name="name">Employee Requisition</field>
            <field name="model">hr.employee.requisition</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
               <tree>
                   <field name="name"/>
<!--                   <field name="employee_id"/>-->
                   <field name="department_id"/>
                   <field name="job_id"/>
                   <field name="state"/>
               </tree>
            </field>
        </record>

        <!-- Employee Requisition Form View  -->

        <record id="employee_requisition_form_view" model="ir.ui.view">
            <field name="name">hr.employee.requisition.form</field>
            <field name="model">hr.employee.requisition</field>
            <field name="arch" type="xml">
                <form string="Employee Requisition">
<!--                    <field name="can_reset" invisible="1"/>-->
                    <header>
                          <button name="action_confirm" type="object" states="draft"
                                string="Confirm" class="oe_highlight"/>

                        <button string="Reset to Draft" name="action_draft" type="object"
                                    attrs="{'invisible': [('state', 'not in', ['confirm'])]}"/>

                          <button name="action_valid" type="object" states="confirm"
                                string="Validate" class="oe_highlight"/>

                          <button name="action_cancel" type="object" states="confirm"
                                string="Cancel" class="oe_highlight"/>

                          <field name="state" widget="statusbar"/>
                      </header>
                    <sheet>
                        <div class="oe_title">
							<h2><field name="name" readonly="True"/></h2>
						</div>
						<separator string="Description" colspan="2"/>
                        <group>
                            <group>
<!--                                <field name="employee_id"/>-->
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="current_employee"/>
                                <field name="job_location"/>
                                <field name="requisition_justification"/>
                                <field name="job_description"/>
                                <field name="additional_skills"/>

                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="budgeted"/>
                                <field name="main_function"/>
                                <field name="required_position" invisible="1"/>
                                <field name="vacancies_no"/>
                                <field name="gender"/>
                                <field name="position_vacant_for"/>
                                <field name="replace_name_id" attrs="{'invisible': [('position_vacant_for', '!=', 'replace')]}"/>
                                <field name="replace_no" attrs="{'invisible': [('position_vacant_for', '!=', 'replace')]}"/>
                                <field name="expect_joining_date"/>
                                <field name="requisition_sub_date"/>
                            </group>
                            <group string="Job Specifications" name="specification">
                                <field name="year_of_experience"/>
                                <field name="preferred_industry"/>
                                <field name="essential_education"/>
                                <field name="preferred_education"/>
                                <field name="salary_range"/>
                                <field name="language_proficency"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Employee Requisition Action View  -->

        <record model="ir.actions.act_window" id="action_employee_requisition">
			<field name="name">Employee Requisition</field>
			<field name="res_model">hr.employee.requisition</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem
            name="Employee Requisition"
            parent="hr_recruitment.menu_hr_recruitment_root"
            id="menu_action_employee_requisition"
            groups="hr_recruitment.group_hr_recruitment_user,hr_recruitment.group_hr_recruitment_manager"
            action="action_employee_requisition" sequence="2"/>

    </data>

</odoo>



