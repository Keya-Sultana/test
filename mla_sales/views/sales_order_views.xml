<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="sale_order_form_inherit_irn_status" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.irn.status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form[1]/header[1]/button[8]" position="replace"/>
 <xpath expr="//header/button[@name='action_quotation_send']" position="after">
                <field name="current_user_is_approver_or_not" invisible="True"/>
                <button string="Approve" type="object" name="new_approval_so" attrs="{'invisible': [('current_user_is_approver_or_not', '=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="pending_approver"/>
            </xpath>

        </field>
    </record>


</odoo>