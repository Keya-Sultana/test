        <template id="gbs_employee_attendance_doc">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page" style="page-break-inside: auto">
                        <h3 class="text-center">Employee Attendance Summary</h3>
                        <div class="row">
                            <div class="col-6">
                                <label>Employee :</label>
                                <span t-esc="data['name']"/>
                            </div>
                            <div class="col-6 text-right">
                                <label>Date From :</label>
                                <span t-esc="data['date_from']"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label>Department :</label>
                                <span t-esc="data['dept']"/>
                            </div>
                            <div class="col-6 text-right">
                                <label>Date To :</label>
                                <span t-esc="data['date_to']"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label>Designation :</label>
                                <span t-esc="data['designation']"/>
                            </div>
                            <div class="col-6"></div>
                        </div>
                        <table class="table table-report-xs table-bordered table-striped">
                            <thead>
                                <th>S.N.</th>
                                <th>Duty Date</th>
                                <th>Check In</th>
                                <th>Check Out</th>
                                <th>Duty Hours</th>
                            </thead>
                            <tbody>
                                <t t-foreach="cio_data" t-as="list">
                                    <tr>
                                        <td><span t-esc="list_index+1"/> </td>
                                        <td><span t-esc="list_value['duty_date']"/></td>
                                        <td><span t-esc="list_value['check_in']"/></td>
                                        <td><span t-esc="list_value['check_out']"/></td>
                                        <td><span t-esc="list_value['worked_hours']" t-field-options='{"format": "%H:%M"}' /></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
        <record id="action_employee_attendance_report" model="ir.actions.report">
			<field name="name">Employee Attendance Report</field>
			<field name="model">hr.attendance</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">gbs_hr_attendance_report.gbs_employee_attendance_doc</field>
			<field name="report_file">gbs_hr_attendance_report.gbs_employee_attendance_doc</field>
			<field name="binding_model_id" ref="hr_attendance.model_hr_attendance"/>
			<field name="binding_type">report</field>
		</record>
    </data>
</odoo>