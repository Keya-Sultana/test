		<template id="report_attendance_doc">
			<t t-call="web.html_container">
<!--				<t t-call="web.external_layout">-->
				<t t-call="web.basic_layout">
					<div class="page">
						<div>
<!--							<br/><br/><br/><br/>-->
							<h3 class="text-center">Attendance Report for  <span t-esc="check_type_friendly_str "></span> </h3>
							<br/><br/>
							<div class="row">
								<div class="col-6">
								</div>
                                <div class="col-6 text-right">
                                    <t t-if="from_date">
                                        <strong>Period : </strong>
                                        <span t-esc="from_date"/>
                                    </t>
                                    <t t-if="to_date">
                                        <strong>to </strong>
                                        <span t-esc="to_date"/>
                                    </t>
                                </div>
                            </div>

							<table class="table table-report-xs table-bordered table-striped">
								<thead>
									<tr style="background-color:#f5f5f5;">
										<th>Name</th>
										<th>Department</th>
										<th>Designation</th>
										<t t-foreach="dynamic_col_list" t-as="c">
											<th>
												<span t-esc="c"></span>
											</th>
										</t>
									</tr>
								</thead>
								<tbody>
									<t t-foreach="all_val_list" t-as="emp">
										<tr>
											<td>
												<span class="text-nowrap" t-esc="emp['emp_name']"></span>
											</td>
											<td>
												<span class="text-nowrap" t-esc="emp['dept']"></span>
											</td>
											<td>
												<span class="text-nowrap" t-esc="emp['designation']"></span>
											</td>

											<t t-foreach="dynamic_col_list" t-as="c">
												<td class="text-right">
													<span t-esc="emp[c]"></span>
												</td>
											</t>

										</tr>
									</t>
								</tbody>
							</table>
						</div>
						<div class="row mb32" style="margin-top: 30mm;">
							<div class="col-3 text-center">
								<strong style="border-top: 1px solid black; padding-top:5px;">Prepared By</strong>
							</div>
							<div class="col-3 text-center">
								<strong style="border-top: 1px solid black; padding-top:5px;">Checked By</strong>
							</div>
							<div class="col-3 text-center">
								<strong style="border-top: 1px solid black; padding-top:5px;">Authorized By</strong>
							</div>
							<div class="col-3 text-center">
								<strong style="border-top: 1px solid black; padding-top:5px;">Approved By</strong>
							</div>
						</div>
					</div>
				</t>
			</t>
		</template>

		<record id="action_report_attendance_doc" model="ir.actions.report">
			<field name="name">Attendance Report</field>
			<field name="model">hr.attendance</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">gbs_hr_attendance_report.report_attendance_doc</field>
			<field name="report_file">gbs_hr_attendance_report.report_attendance_doc</field>
			<field name="paperformat_id" ref="gbs_hr_attendance_report.paperformat_backend_landscape_two"/>
			<field name="binding_model_id" ref="hr_attendance.model_hr_attendance"/>
			<field name="binding_type">report</field>
		</record>

	</data>
</odoo>