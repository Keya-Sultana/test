<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Generate automated sequence -->
        <record id="empl_trans_seqs" model="ir.sequence">
            <field name="name">Employee Transfer Sequences</field>
            <field name="code">hr.employee.transfer</field>
            <field name="prefix">ET-</field>
            <field name="padding">4</field>
        </record>

        <record id="hr_employee_transfer_form" model="ir.ui.view">
            <field name="name">hr.employee.transfer</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <form string="Transfer">
                    <header>
                        <button name="action_confirm" type="object" states="draft" string="Confirm" class="oe_highlight"/>

                        <button string="Done" states="confirm" name="action_done" type="object" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>

                    </header>
                    <sheet>
                        <h1>
							<field name="name"/>
						</h1>
                        <group>
                            <group>
                                <field name="employee_id" />
                                <field name="curr_designation_id"/>
                                <field name="curr_dept_id"/>
                                <field name="curr_operating_unit_id" options='{"no_open": True,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                            <group>
                                <field name="effective_date" />
                                <field name="new_designation_id"/>
                                <field name="new_dept_id"/>
                                <field name="new_operating_unit_id" />
                            </group>
                        </group>
                        <group>
                            <field name="remarks" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_employee_transfer_tree" model="ir.ui.view">
            <field name="name">hr.employee.transfer</field>
            <field name="model">hr.employee.transfer</field>
            <field name="arch" type="xml">
                <tree string="Transfer">
                    <field name="employee_id" />
                    <field name="effective_date"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

        <record id="action_hr_employee_transfer" model="ir.actions.act_window">
            <field name="name">Employee Transfer</field>
            <field name="res_model">hr.employee.transfer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="employee_transfer_menu"
				  name="Employee Transfer"
                  action="action_hr_employee_transfer"
                  parent="hr.menu_hr_employee_payroll"
                  sequence="4"/>
</odoo>