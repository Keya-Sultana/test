<?xml version="1.0" encoding="UTF-8"?>

<odoo noupdate="1">

    <record id="ir_cron_backup_scheduler_0" model="ir.cron">
        <field name="name">Attendance Scheduler</field>
        <field name="active">0</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="nextcall"
               eval="(datetime.now() + timedelta(hours=1)).strftime('%Y-%m-%d 02:00:00')"
               />
<!--        <field name="model_id">model_hr_attendance_device_detail</field>-->
        <field name="model_id" ref="model_hr_attendance_device_detail"/>
        <field name="code">model.pull_automation()</field>
<!--        <field name="function">pull_automation</field>-->
    </record>

    <record id="email_notification_template" model="mail.template">
            <field name="name">Attendance Synchronization Notification</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">Attendance Synchronization Notification</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
<div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <p>Dear ${object.name},</p>
    <b/>
    <p>Attendance Data Synchronized Till Now.</p>
    <b/>
</div>
<div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
    <p style="font-size: 11px; margin-top: 10px;">
    <br></br>
    Your Family at
        <strong>${user.company_id.name}</strong>
    </p>
</div>]]>
            </field>
<!--            <field name="user_signature" eval="False"/>-->
        </record>

</odoo>
