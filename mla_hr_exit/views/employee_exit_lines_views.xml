<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="employee_exit_form_inherit_irn_status" model="ir.ui.view">
        <field name="name">hr.exit.req.form.inherit.irn.status</field>
        <field name="model">hr.emp.exit.req</field>
        <field name="inherit_id" ref="hr_employee_exit.exit_req_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/header[1]/button[@name='exit_done']" position="replace"/>
            <xpath expr="//header/button[@name='exit_refuse']" position="before">
                <field name="current_user_is_approver_or_not" invisible="True"/>
                <button string="Approve" type="object" name="new_approval_po"
                        attrs="{'invisible': ['|',['current_user_is_approver_or_not','=',False],['state','!=','to approve']]}"/>
            </xpath>
            <xpath expr="//header/button[@name='exit_refuse']" position="replace">
                <field name="current_user_is_approver_or_not" invisible="True"/>
               <button string="Reject" type="object" name="exit_refuse"
                        attrs="{'invisible': ['|',['current_user_is_approver_or_not','=',False],['state','!=','to approve']]}"/>
            </xpath>
            <xpath expr="//field[@name='effected_date']" position="after">
                <field name="pending_approver" attrs="{'invisible': [['state','!=','to approve']]}"/>
            </xpath>

        </field>
    </record>


</odoo>