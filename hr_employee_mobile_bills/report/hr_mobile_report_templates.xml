<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<odoo>
    <data>
        <record id="custom_report_mobile_bill" model="ir.actions.report">
			<field name="name">Employee Mobile Bills</field>
			<field name="model">hr.mobile.bill</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">hr_employee_mobile_bills.report_mobile_bill</field>
			<field name="report_file">hr_employee_mobile_bills.report_mobile_bill</field>
			<field name="binding_model_id" ref="hr_employee_mobile_bills.model_hr_mobile_bill"/>
			<field name="binding_type">report</field>
		</record>

        <template id="report_mobile_bill">
           <t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
                        <div class="page" style="page-break-inside:auto">
                            <div class="row">
                                <div class="col-12" style="text-align:center;">
                                    <h4 class="report-title">Employee Mobile Bills Report</h4>
                                    <p><span t-field="o.name"/></p>
                                </div>
                            </div><br/>

                            <table class="table table-bordered table-report-sm table-striped">
                                <thead style="border-style:none;">
                                    <tr class="odo-bg-gray">
                                        <th>Employee</th>
<!--                                        <th>Mobile Number</th>-->
                                        <th>Bill Amount</th>
                                        <th>Exceed Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="l">
                                        <tr>
                                            <td><span t-esc="l.employee_id.name"/></td>
<!--                                            <td><span t-esc="l.emp_mobile_phone"/></td>-->
                                            <td><span t-esc="'{:,.2f}'.format(l.bill_amount)"/></td>
                                            <td><span t-esc="'{:,.2f}'.format(l.amount)"/></td>
                                        </tr>
                	                 </t>

                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>