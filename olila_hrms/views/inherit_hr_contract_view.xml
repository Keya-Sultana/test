<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_contract_tree_view_olila">
        <field name="name">hr.contract.tree (in wage)</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
        <field name="arch" type="xml">
            <field name="job_id" position="after">
                <field name="wage"/>
            </field>
        </field>
    </record>
    <record id="view_contact_form_olila" model="ir.ui.view">
        <field name="name">hr contact form view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='medical_insurance']" position="attributes">
                <attribute name="string">Dormatory Charge</attribute>
            </xpath>
        </field>
    </record>

    <record id="rostaring_shift_form_inherit" model="ir.ui.view">
        <field name="name">rostering.shift.form</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="hr_payroll.payroll_resource_calendar_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='resource_details']/group[2]/field[@name='is_fulltime']" position="before">
                    <field name="shift_code"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="shift_employee_batch_form_inherit" model="ir.ui.view">
        <field name="name">hr.shift.employee.batch.form.inherit</field>
        <field name="model">hr.shift.employee.batch</field>
        <field name="inherit_id" ref="hr_rostering.hr_shift_employee_batch_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='operating_unit_id']" position="after">
                    <field name="shift_incharge"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>