<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Generate automated sequence -->
    <record id="empl_transfer_seqs" model="ir.sequence">
        <field name="name">Transfer Sequences</field>
        <field name="code">hr.employee.transfer</field>
        <field name="active">TRUE</field>
        <field name="prefix">ET-</field>
        <field name="padding">4</field>
    </record>

    <record id="hr_employee_transfer_form" model="ir.ui.view">
        <field name="name">hr.employee.transfer</field>
        <field name="model">hr.employee.transfer</field>
        <field name="arch" type="xml">
            <form string="Transfer">
                <header>
                    <button name="action_confirm" type="object" states="draft" string="Confirm" class="oe_highlight"/>

                    <button string="Approve" states="to approve" name="action_done" type="object" class="oe_highlight"/>
                    <button string="Reject" states="to approve" name="action_reject" type="object"
                            class="oe_highlight"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,approve"/>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h5>
                            <field name="name"/>
                        </h5>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="joining_date"/>
                            <field name="emp_designation" force_save="1"/>
                            <field name="emp_department" force_save="1"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="effective_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="new_designation_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="new_dept_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="new_job_location" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="new_company_name" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="remarks" attrs="{'readonly':[('state','!=','draft')]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_employee_transfer_tree" model="ir.ui.view">
        <field name="name">hr.employee.transfer</field>
        <field name="model">hr.employee.transfer</field>
        <field name="arch" type="xml">
            <tree string="Transfer">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="effective_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="employee_transfer_search" model="ir.ui.view">
        <field name="name">hr.employee.transfer.search.view</field>
        <field name="model">hr.employee.transfer</field>
        <field name="arch" type="xml">
            <search string="Transfer Search">
                <field name="name"/>
                <field name="employee_id"/>
                <group expand='0' string='Group by...'>
                    <filter string='State' name="state" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_employee_transfer" model="ir.actions.act_window">
        <field name="name">Employee Transfers</field>
        <field name="res_model">hr.employee.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="employee_transfer_search"/>
    </record>

    <!--    Employee Transfer Menu-->
    <menuitem id="main_employee_transfer_menu" name="Employee Transfers" groups="base.group_user"
              parent="hr.menu_hr_root"
              sequence="93"/>

    <menuitem
            id="menu_view_transfer_form"
            action="action_hr_employee_transfer"
            parent="main_employee_transfer_menu"
            sequence="1"/>
</odoo>