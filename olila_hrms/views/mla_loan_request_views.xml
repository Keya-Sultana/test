<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="hr_employee_loan_inherit_irn_status" model="ir.ui.view">
        <field name="name">hr.employee.loan.form.inherit.irn.status</field>
        <field name="model">hr.employee.loan</field>
        <field name="inherit_id" ref="hr_employee_loan.hr_employee_loan_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/header[1]/button[@name='action_done']" position="replace">
                <field name="current_user_is_approver_or_not" invisible="True"/>
                <button string="Approve" type="object" name="new_approval_po"
                        attrs="{'invisible': ['|',['current_user_is_approver_or_not','=',False],['state','!=','applied']]}"/>
            </xpath>
            <xpath expr="//form[1]/header[1]/button[@name='action_reject']" position="replace">
                <field name="current_user_is_approver_or_not" invisible="True"/>
                <button string="Reject" type="object" name="action_reject"
                        attrs="{'invisible': ['|',['current_user_is_approver_or_not','=',False],['state','!=','applied']]}"/>
            </xpath>


            <xpath expr="//field[@name='loan_type_id']" position="after">
                <field name="pending_approver" attrs="{'invisible': [['state','!=','applied']]}"/>
            </xpath>

        </field>
    </record>


</odoo>