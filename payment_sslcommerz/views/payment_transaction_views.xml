<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sslcommerz_transaction_form_inherit" model="ir.ui.view">
        <field name="name">sslcommerz.transaction.form.inherit</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="refund_message"/>
                <label for="refund_ref_id"/>
                <div class="o_row">
                    <field name="refund_ref_id"/>
                    <button name="update_refund_status" type="object" string="Update status"/>
                </div>
                <field name="date_refund_init"/>
                <field name="date_refund"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(action_refund_reason_wizard_form)d" type="action"
                        attrs="{'invisible': [('refund_ref_id', '!=', False)]}"
                        string="Refund Payment" class="oe_stat_button" icon="fa-undo"/>
            </xpath>
        </field>
    </record>

</odoo>