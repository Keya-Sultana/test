<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">SSLCOMMERZ Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'sslcommerz')]}">
                    <field name="sslcommerz_store_id" attrs="{'required': [('provider', '=', 'sslcommerz')]}"/>
                    <field name="sslcommerz_store_pass" attrs="{'required': [('provider', '=', 'sslcommerz')]}" password="True"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>