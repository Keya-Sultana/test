<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="refund_reason_wizard_form" model="ir.ui.view">
        <field name="name">refund.reason.form</field>
        <field name="model">refund.reason.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="payment_tran_id" readonly="1"/>
                </group>
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="refund" type="object" string="Refund" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_refund_reason_wizard_form" model="ir.actions.act_window">
        <field name="name">Refund Reason</field>
        <field name="res_model">refund.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="refund_reason_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'view_id':active_id}</field>
    </record>

</odoo>