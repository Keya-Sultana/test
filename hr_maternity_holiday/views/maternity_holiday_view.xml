<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Maternity Leave List view-->

        <record id="view_maternity_holiday" model="ir.ui.view">
            <field name="name">Maternity Leave List View</field>
            <field name="model">hr.maternity.holiday</field>
            <field name="arch" type="xml">
                <tree string="Maternity Leave">
                    <field name="employee_id"/>
                    <field name="department_id" invisible="1"/>
                    <field name="number_of_days" string="Allocated Days" sum="Remaining Days"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Maternity Leave Form view -->

        <record id="maternity_holiday_form_view" model="ir.ui.view">
            <field name="name">Maternity Leave Form View</field>
            <field name="model">hr.maternity.holiday</field>
            <field name="arch" type="xml">
                <form string="Maternity Leave">
                    <field name="can_reset" invisible="1"/>
                    <header>

                        <button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>

                        <button name="%(hr_maternity_holiday.action_report_maternity)d" string="Print Maternity Benefit Bill" type="action"/>

                        <button string="Re-Calculate" name="action_calculate" type="object" class="oe_highlight"
                                      attrs="{'invisible': [('state', 'in', ['draft', 'validate'])]}" groups="hr.group_hr_manager,hr.group_hr_user"/>

                        <field name="current_user_is_approver" invisible="True" />
                        <button string="Approve" name="btn_action_approve" type="object"
                            attrs="{'invisible': ['|', ('current_user_is_approver', '!=', True),('state', '!=', 'confirm')]}"
                            class="oe_highlight" />

                        <button string="Reset to Draft" name="action_draft" type="object"
                                    attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm'])]}"/>

                        <button string="Validate" name="action_validate" states="confirm,validate1" type="object" groups="hr_holidays.group_hr_holidays_manager,hr.group_hr_manager" class="oe_highlight"/>

                        <button string="Refuse" name="action_refuse" type="object"
                                attrs="{'invisible': ['|',('current_user_is_approver', '!=', True),('state', '!=', 'confirm')]}"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" attrs="{'readonly':[('state','!=','draft')]}" options='{"no_open": 1,"no_create": 1, "no_create_edit":1}'/>
                                <field name="department_id" />
                                <field name="template_id" attrs="{'readonly':[('state','!=','draft')]}" options='{"no_open": 1,"no_create": 1, "no_create_edit":1}'/>
                            </group>
                            <group>
                                <label for="number_of_days_temp" string="Duration"/>
                                <div>
                                    <div>
                                        <field name="date_from" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <label for="date_to" string="-" class="oe_inline"/>
                                        <field name="date_to" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/>
                                    </div>
                                    <div>
                                        <field name="number_of_days_temp" class="oe_inline" attrs="{'readonly':[('state','!=','draft')]}"/> days
                                    </div>
                                </div>
                                <field name="joining_after_leave" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="maternity_allowance" />
                                <field name="last_calculation_time" />
                                <field name="pending_approver" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            </group>
                            <separator string="Notes"/>
                            <field name="notes" nolabel="1" colspan="4" placeholder="Add a notes..."  attrs="{'readonly':[('state','!=','draft')]}"/>
                            <separator string="HR Comments"/>
                            <field name="report_note" nolabel="1" placeholder="Add a comments..." attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <notebook>
                            <page string="Approbations">
                                <field name="approbations">
                                    <tree>
                                        <field name="approver_id" />
                                        <field name="date" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

<!--         Employee Requisition Action View  -->

        <record model="ir.actions.act_window" id="action_maternity_holiday">
			<field name="name">Maternity Leave</field>
			<field name="res_model">hr.maternity.holiday</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem action="action_maternity_holiday" id="menu_action_maternity_holiday"
			parent="hr_holidays.menu_hr_holidays_root" sequence="3"
            groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user,base.group_user"/>


    </data>
</odoo>