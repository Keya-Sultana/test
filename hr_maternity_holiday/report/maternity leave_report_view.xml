<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- Definition of the report -->
        <record id="action_report_maternity" model="ir.actions.report">
           <field name="name">Maternity Benefit Bill</field>
           <field name="model">hr.maternity.holiday</field>
           <field name="report_type">qweb-pdf</field>
           <field name="report_name">hr_maternity_holiday.report_maternity_qweb</field>
           <field name="report_file">hr_maternity_holiday.report_maternity_qweb</field>
      </record>


		<!-- Main template -->
		<template id="report_maternity_qweb">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
                        <div>
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #B4FDF0; }
                            </style>
                            <div class="text-center">
                                <h3 style="text-decoration: underline; margin-top:30px; margin-bottom:30px;">Maternity Benefit Bill(<span t-field="o.template_id.pay_days"/> Days)</h3>
                            </div>

                            <table class="table table-condensed table-bordered">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td style="width:25%;"><span t-field="o.employee_id.name"/></td>
                                    <td style="width:15%;"></td>
                                    <td><strong>Date:</strong></td>
                                    <td style="width:20%;"><span t-esc="time.strftime('%Y-%m-%d')" /></td>
                                </tr>
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td style="width:25%;"><span t-field="o.employee_id.identification_id"/></td>
                                    <td style="width:15%;"></td>
                                </tr>
                                <tr>
                                    <td><strong>Designation:</strong></td>
                                    <td style="width:25%;"><span t-field="o.employee_id.job_id.name"/></td>
                                    <td style="width:15%;"></td>
                                    <td><strong>Gross Salary:</strong></td>
                                    <td style="width:20%;"><span t-field="o.ex_salary_amount"/>0</td>
                                </tr>
                                <tr>
                                    <td><strong>Department:</strong></td>
                                    <td style="width:25%;"><span t-field="o.employee_id.department_id.name"/></td>
                                    <td style="width:15%;"></td>
                                    <td><strong>Total Days:</strong></td>
                                    <td style="width:20%;"><span t-field="o.template_id.pay_days"/> Days</td>
                                </tr>
                                <tr>
                                    <td><strong>Date of Join:</strong></td>
                                    <td style="width:25%;"><span t-field="o.employee_id.initial_employment_date"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Leaves Duration:</strong></td>
                                    <td style="width:25%;"><span t-field="o.date_from"/> to <span t-field="o.date_to"/>=<span t-field="o.number_of_days_temp"/> days</td>
                                </tr>
                                <tr>
                                    <td><strong>Joining Date After Leaves:</strong></td>
                                    <td style="width:25%;"><span t-field="o.joining_after_leave"/></td>
                                </tr>
                            </table><br/>

