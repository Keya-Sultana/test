                            <table class="table table-sm">
                                <tr>
                                    <td style="border: 1px solid black"><strong>Previous 3 (Three) Months Actual Earning   =</strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-field="o.ex_salary_amount"/>0</td>
                                    <td style="border: 1px solid black; width:10%;"><strong>TK</strong></td>
                                </tr>
                                <tr>
                                    <t t-set="pay_days_Total" t-value="o.maternity_allowance / o.template_id.pay_days"/>
                                    <td style="border: 1px solid black"><strong>Previous 3 (Three) Months Actual Pay Days   =</strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-field="o.ex_salary_days"/></td>
                                    <td style="border: 1px solid black; width:10%;"><strong>Days</strong></td>
                                </tr>
                                <tr>
                                    <t t-set="earning_perday" t-value="o.maternity_allowance / o.template_id.pay_days"/>
                                    <td style="border: 1px solid black"><strong>Previous 3 (Three) Months Average Actual Earning per Day  =</strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-esc="'%.2f'% earning_perday" /></td>
                                    <td style="border: 1px solid black; width:10%;"><strong>TK</strong></td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black"><strong>Maternity Benefit    =</strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-field="o.maternity_allowance"/>0</td>
                                    <td style="border: 1px solid black; width:10%;"><strong>TK</strong></td>
                                </tr>
                            </table><br/>

                            <table class="table table-sm">
                                <tr>
                                    <th style="border: 1px solid black;text-align:center;">Name of Payment </th>
                                    <th style="border: 1px solid black;text-align:center;">Amount</th>
                                    <th style="border: 1px solid black;text-align:center;">TK</th>
                                    <th style="border: 1px solid black;text-align:center;">Receiver's Signature</th>
                                </tr>
                                <tr>
                                    <t t-set="benefit_before_leave" t-value="o.maternity_allowance / 2"/>
                                    <td style="border: 1px solid black;text-align:center;"><strong>Maternity Benefit before Leave = ½ of total benefit  </strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-esc="'%.2f'% benefit_before_leave" /></td>
                                    <td style="border: 1px solid black; width:10%;text-align:center">TK</td>
                                    <td style="border: 1px solid black; width:25%;"></td>
                                </tr>
                                <tr>
                                    <t t-set="benefit_after_leave" t-value="o.maternity_allowance / 2"/>
                                    <td style="border: 1px solid black;text-align:center;"><strong>Maternity Benefit After Leave = ½ of total benefit   </strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-esc="'%.2f'% benefit_after_leave" /></td>
                                    <td style="border: 1px solid black; width:10%;text-align:center">TK</td>
                                    <td style="border: 1px solid black; width:25%;"></td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;text-align:center;"><strong>Total Amount =</strong></td>
                                    <td style="border: 1px solid black; width:15%;text-align:right"><span t-field="o.maternity_allowance"/>0</td>
                                    <td style="border: 1px solid black; width:10%;text-align:center">TK</td>
                                    <td style="border: 1px solid black; width:25%;"></td>
                                </tr>
                            </table><br/>

<!--                            <strong>Taka In Word: <span t-esc="o.amount_to_text(o.maternity_allowance)"/> Only</strong>-->
                            <strong>Taka In Word: <span t-esc="o.maternity_allowance"/> Only</strong>
                            <br/><br/>

                            <div class="row" style="margin: 5px">
                                <div class="col-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">HR &amp; Admin</strong>
                                </div>
                                <div class="col-3 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Internal Audit</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">Accounts &amp; Finance</strong>
                                </div>
                                <div class="col-2 text-center">
                                    <strong style="border-top: 1px solid black; padding-top:5px;">CEO</strong>
                                </div>
                            </div>

                        </div>

					</div>
				</t>
				</t>
			</t>
		</template>


	</data>
</odoo>