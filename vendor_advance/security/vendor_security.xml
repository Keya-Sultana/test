<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="module_vendor_advance_category" model="ir.module.category">
            <field name="name">Vendor Advance</field>
            <field name="sequence">18</field>
        </record>
        <record id="vendor_advance_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_vendor_advance_category"/>
            <field name="users" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="vendor_advance_approver" model="res.groups">
            <field name="name">Vendor Advance Approver</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <record id="vendor_advance_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('vendor_advance_group_user'))]"/>
            <field name="category_id" ref="module_vendor_advance_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="vendor_advance_group_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="module_vendor_advance_category"/>
            <field name="implied_ids" eval="[(4, ref('vendor_advance_group_manager'))]"/>
<!--            <field name="sequence">30</field>-->
        </record>

    </data>
</odoo>


