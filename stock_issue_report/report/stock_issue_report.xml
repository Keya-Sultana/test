        <template id="report_stock_issue">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page" style="page-break-inside: auto">
                        <div>
                            <style type="text/css">
                                .report-title { text-align:center; }
                                .odo-bg-gray, .odo-bg-gray > td { background-color: #f5f5f5; }
                            </style>
                            <div class="clearfix">
                                <h4 class="report-title">Stock Issue Report</h4>
                                <div class="row" style="padding-top:10px;">
                                    <div class="col-6" style="padding-bottom:10px;">
                                        <t t-if="record['from_date']">
                                            <strong>Date : </strong>
                                            <span t-esc="record['from_date']"/>
                                        </t>
                                        <t t-if="record['to_date']">
                                            <strong style="padding-left:5px;">To : </strong>
                                            <span t-esc="record['to_date']"/>
                                        </t>
                                    </div>
                                    <div class="col-6 text-right">
                                        <t t-if="record['operating_unit_name']">
                                            <strong>Department : </strong>
                                            <span t-esc="record['stock_location_name']"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-report-xs table-bordered table-striped">
                                <thead>
                                    <tr class="odo-bg-gray">
                                        <th class="text-center" style="width:5%;">SL#</th>
                                        <th class="text-center" style="width:10%;">Code</th>
                                        <th class="text-center" style="width:45%;">Product</th>
                                        <th class="text-center" style="width:10%;">Unit</th>
                                        <th class="text-center" style="width:15%;">Indent Quantity</th>
                                        <th class="text-center" style="width:15%;">Received Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="product_lines">
                                        <t t-foreach="product_lines" t-as="data">
                                            <t t-if="data_value['product']">
                                                <tr style="background-color: #ebebe0; text-align:left;">
                                                    <td colspan="6" style="padding: 0px;">
                                                        <strong>
                                                            <t t-esc="data"/>
                                                        </strong>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-foreach="data_value['product']" t-as="line">
                                                <tr>
                                                    <td class="text-left"  style="width:25px;">
                                                        <t t-esc="line_index+1"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['code']"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <t t-esc="line['pt_name']"/>
                                                        <t t-if="line['variant_name']">(<t t-esc="line['variant_name']"/>)</t>
                                                    </td>
                                                    <td class="text-left">
                                                        <t t-esc="line['uom_name']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['quantity']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="line['received_qty']"/>
                                                    </td>
                                                </tr>
                                            </t>

                                            <t t-if="data_value['product']">
                                                <tr style="font-weight: bold; background-color: #E4E4E4; border-bottom: 1px solid black;">
                                                    <td colspan="4" class="text-left">
                                                        <t t-esc="data_value['sub-total']['title']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="data_value['sub-total']['total_issue_qty']"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="data_value['sub-total']['total_due_qty']"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                    <tr style="font-weight: bold; background-color: #897d79; border-bottom: 1px solid black;">
                                        <td colspan="4" class="text-left">
                                            <t t-esc="total['title']"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="total['total_issue_qty']"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="total['total_due_qty']"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
<!--                            <t t-call="web.report_layout.report_signing"></t>-->
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="action_stock_issue_report" model="ir.actions.report">
			<field name="name">Stock Issue Report</field>
			<field name="model">indent.indent</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">stock_issue_report.report_stock_issue</field>
			<field name="report_file">stock_issue_report.report_stock_issue</field>
			<field name="binding_type">report</field>
		</record>
