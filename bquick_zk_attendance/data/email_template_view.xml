<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <!-- Template and notification section -->
        <record id="biometric_attendance_email" model="mail.template">
            <field name="name">Biometric Attendance Device Connection</field>
            <field name="model_id" ref="hr_zk_attendance.model_zk_machine"/>
            <field name="subject">Attendance Device Connection Fail</field>
            <field name="email_to">{{ object.user_ids.email_formatted }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Unable to connect, please check the network connections.
                                <br/>
                                <br/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>
    </data>
</odoo>
