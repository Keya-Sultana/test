<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--- Group -->
        <record id="biometric_manager_access" model="res.groups">
            <field name="name">Biometric Device Attendance Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- ZkMachine Recode Rules -->
        <record id="restrict_on_ZkMachine" model="ir.rule">
            <field name="name">Restriction on Deletion of ZkMachine</field>
            <field name="model_id" ref="hr_zk_attendance.model_zk_machine"/>
            <field name="domain_force">[(0, '=', 1)]</field>
            <field name="perm_read">0</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">1</field>
        </record>

        <record id="biometric_device_rule_attendance_manager" model="ir.rule">
            <field name="name">Biometric Device Attendance Manager: full access</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
            <field name="groups" eval="[(4,ref('bquick_zk_attendance.biometric_manager_access'))]"/>
        </record>

    </data>
</odoo>